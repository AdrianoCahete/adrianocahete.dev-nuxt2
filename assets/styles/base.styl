// Default Dark Mode
:root {
  --primaryColor: rgb(131, 194, 210); // rgba(196, 218, 240, 1)

  --bgColor: radial-gradient(circle farthest-corner at 10% 20%, rgba(90, 92, 106, 1) 0%, rgba(32, 45, 58, 1) 81.3% );

  --scrollbarColor: rgba(51, 51, 51, 1);

  --navbarColor: transparent; // rgba(40, 40, 40, 1);
  --navbarBorder: 1px solid rgba(58, 66, 79, 1);
  --navbarIconColor: rgba(255, 255, 255, 1);
  --navbarIconColorAlt: rgba(40, 40, 40, 1);

  --navColor: rgba(255, 255, 255, .5);
  --navColorHover: rgba(255, 255, 255, .8);

  --textColor: rgba(255, 255, 255, 1);
  --grayedOut: rgba(169, 169, 169, 1);

  // Same in both themes
  --alertInfo: rgba(40, 143, 235, 1);

}

// Light Mode
@media (prefers-color-scheme: light) {
  :root {
    --primaryColor: rgba(0, 108, 136, 1);

    --bgColor: radial-gradient(circle farthest-corner at 10% 20%, rgba(255, 255, 255, .8) 0%, rgba(233, 237, 239, 1) 70% );

    --scrollbarColor: rgba(228, 228, 228, .8);

    --navbarColor: transparent; // rgba(214, 214, 214, 1);
    --navbarBorder: 1px solid rgba(228, 228, 228, 1);
    --navbarIconColor: rgba(40, 40, 40, 1);
    --navbarIconColorAlt: rgba(214, 214, 214, 1);

    --navColor: rgba(51, 51, 51, .6);
    --navColorHover: rgba(51, 51, 51, .9);

    --textColor: rgba(51, 51, 51, 1);
    --grayedOut: rgba(78, 78, 78, 1);
  }
}

html {
  font-family: 'Source Sans Pro', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  font-size: 62.5%;
  word-spacing: 1px;
  -ms-text-size-adjust: 100%;
  -webkit-text-size-adjust: 100%;
  -moz-osx-font-smoothing: grayscale;
  -webkit-font-smoothing: antialiased;
  box-sizing: border-box;
  height: 100vh;
  background: var(--bgColor);
  background-attachment: fixed;
  color: var(--textColor, #ffffff);
  scrollbar-color: rgba(255, 255, 255, .8) @background; // <Thumb> <Track> -- Browser Customizations
  scrollbar-width: thin;  // Browser Customizations
  scroll-behavior: smooth;
  overflow-x: hidden;
  transition: ease all .3s;
}
// Scrollbar for Firefox 64+
// https://developer.mozilla.org/en-US/docs/Web/CSS/scrollbar-color#Browser_compatibility
// https://developer.mozilla.org/en-US/docs/Web/CSS/scrollbar-width#Browser_compatibility

body {
  height: 100vh;
  max-height: 100vh;
  font-size: 1.6rem;
  // overflow: hidden;
}

// Browser Customizations
// Scrollbar for Chrome
// https://developer.mozilla.org/en-US/docs/Web/CSS/::-webkit-scrollbar
::-webkit-scrollbar {
    width: 8px;
}

::-webkit-scrollbar-track {
    box-shadow: inset 0 0 5px var(--scrollbarColor);
    border-radius: 3px;
}

// Handle
::-webkit-scrollbar-thumb {
    background: rgb(110, 110, 110);
    border-radius: 10px;

  &:hover {
      background: rgb(110, 110, 110);
  }
}

::-webkit-scrollbar-track-piece {
    // not handle on
    background: var(--scrollbarColor);
}

*,
*:before,
*:after {
  box-sizing: border-box;
  margin: 0;
}

.layout-enter-active,
.layout-leave-active {
  transition: opacity .5s;
}
.layout-enter,
.layout-leave-active {
  opacity: 0;
}

a {
  color: var(--textColor, #ffffff);
}

.page {
  display: flex;
}

@media (max-width: 1024px) {
  .page {
    flex-direction: column;
  }
}

.isMobile {
  flex-direction: column;
}

.content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  margin: 0 auto;
  margin-left: 20vw; // Get from vars
  width: 80vw;
  scroll-snap-type: y mandatory;
}

@media (max-width: 1024px) {
  .content {
    margin-left: 0;
    width: 100vw;
  }
}

// Utils
.isHidden {
  opacity: 0;
  height: 0;
  width: 0;
}
