.section {
  min-height: 100vh;
  width: 100%;
  padding-top: 2vh;
  padding-left: 2vw;
  text-align: left;
  align-self: flex-start;
  scroll-snap-align: start;

  &.isCentered {
    display: flex;
    flex-direction: column;
    text-align: center;
    justify-content: center;
    align-items: center;
    align-self: center;
  }
}

.section-row {
  display: flex;
  text-align: left;
  padding-top: 2vh;
  padding-left: 2vw;

  .section-col {
    max-width: 50%;
    margin-right: 1vw;
  }
}

.section-simple {
  padding-left: 2vw;
  padding-top: 2vh;
  text-align: left;
  align-self: flex-start;
}

.title {
  display: block;
  font-weight: 300;
}

.description {
  margin-top: 1rem;
  margin-bottom: @margin-top;
}

@media (max-width: 1024px) {
  .section {
    padding: 1rem 2rem;
  }
}
