.section {
  width: 95%;
  padding-top: 2vh;
  min-height: 100vh;
  margin-top: 1vh;
  margin-left: 2vw;
  // max-height: 100vh;
  // overflow: hidden;
  text-align: left;
  align-self: flex-start;
  scroll-snap-align: start;

  &.isCentered {
    display: flex;
    flex-direction: column;
    text-align: center;
    justify-content: center;
    align-items: center;
    align-self: center;
  }
}

.title {
  display: block;
  font-weight: 300;
  letter-spacing: 1px;
}

.description {
  margin-top: 1rem;
  margin-bottom: @margin-top;
}

@media (max-width: 1024px) {
  .section {
    padding: 0 1vw;
  }
}
