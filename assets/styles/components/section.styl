.section {
  padding-top: 2vh;
  height: 100vh;
  margin-top: 1vh;
  scroll-snap-align: start;
  max-height: 100vh;
  overflow: hidden;
  text-align: left;
  align-self: flex-start;

  &.isCentered {
    display: flex;
    flex-direction: column;
    text-align: center;
    justify-content: center;
    align-items: center;
    align-self: center;
  }
}
